-module(release).
-mode(compile).


main([]) ->
    {release, {Name, Version}, _} = release(),
    set_output("name", Name),
    set_output("version", Version).


release() ->
    [Release] = lists:filter(
                  fun
                      ({release, _, _}) ->
                          true;

                      (_) ->
                          false
                  end,
                  relx()),
    Release.


set_output(Name, Value) ->
    io:format("::set-output name=~s::~s~n", [Name, Value]).


relx() ->
    {ok, Configuration} = file:consult(config()),
    Configuration.


config() ->
    filename:join(github_workspace(),"relx.config").


github_workspace() ->
    getenv("GITHUB_WORKSPACE").


getenv(Variable) ->
    case os:getenv(Variable) of
        false ->
            error(badarg, [Variable]);

        Value ->
            Value
    end.
