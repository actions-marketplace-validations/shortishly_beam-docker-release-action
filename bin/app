-module(app).
-mode(compile).


main([]) ->
    {application, Name, _} = application(),
    set_output("name", Name).


application() ->
    {ok, [{application, _, _} = Application]} = file:consult(app()),
    Application.

app() ->
    [Filename] = filelib:wildcard(
                   filename:join(runner_workspace(),"ebin/*.app")),
    debug(Filename),
    Filename.


set_output(Name, Value) ->
    io:format("::set-output name=~s::~s~n", [Name, Value]).


runner_workspace() ->
    getenv("RUNNER_WORKSPACE").


debug(Message) ->
    io:format("::debug::~p~n", [Message]).


getenv(Variable) ->
    case os:getenv(Variable) of
        false ->
            error(badarg, [Variable]);

        Value ->
            Value
    end.
