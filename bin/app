-module(app).
-mode(compile).


main([]) ->
    {application, Name, Properties} = application(),
    set_output("app-name", Name),
    set_output("app-version", proplists:get_value(vsn, Properties)).


application() ->
    {ok, [{application, _, _} = Application]} = file:consult(app()),
    Application.

app() ->
    [Filename] = filelib:wildcard("ebin/*.app"),
    debug(Filename),
    Filename.


set_output(Name, Value) ->
    io:format("::set-output name=~s::~s~n", [Name, Value]).


debug(Message) ->
    io:format("::debug::~p~n", [Message]).
